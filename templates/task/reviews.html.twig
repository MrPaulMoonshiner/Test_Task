{% extends 'base.html.twig' %}

{% block body %}


            <table id="table-id" class="table">
                <thead>
                <tr>
                    <th>{{ knp_pagination_sortable(pagination, 'Username'|trans, 'username') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'E mail'|trans, 'e_mail') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'Review'|trans, 'user_review') }}</th>
                    <th>{% trans %}Picture{% endtrans %}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'Date'|trans, 'pub_date') }}</th>

                </tr>
                </thead>


                {% for row in pagination %}
                    {% if row.active != 0 %}
                        <tbody>
                        <tr>
                            <td>{{ row.username }}</td>

                            <td>{{ row.eMail }}</td>
                            <td>{{ row.userReview }}</td>
                            {% if row.brochure %}
                            <td><img src="/images/{{ row.brochure }}"></td>
                            {% endif %}
                            <td>{{ row.pubDate|date('H:i:s y/m/d') }}</td>

                        </tr>

                        </tbody>
                    {% else %}
                        <tbody>
                        <tr>
                            <td>This message</td>

                            <td> is waiting for confirmation</td>
                            <td>by the moderator</td>
                            <td><img src="/images/c1e207fb1694e813210125debb37097f.png"></td>
                            <td>{{ row.pubDate|date('H:i:s y/m/d') }}</td>

                        </tr>

                        </tbody>
                    {% endif %}
                {% endfor %}
            </table>




<div class="navigate">
    {{ knp_pagination_render(pagination) }}
</div>




{% endblock %}

